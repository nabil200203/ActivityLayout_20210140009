<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/olive"
    tools:context=".linaerlayout">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="153dp"
        android:layout_height="66dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/husqvarna" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/birudongker"
            android:text="Button 1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="142dp"
            android:backgroundTint="@color/birudongker"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Button 2" />
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="364dp"
        android:backgroundTint="@color/birudongker"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="30dp"
        android:text="MATCH PARENT" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button7"
            android:layout_width="126dp"
            android:backgroundTint="@color/kuning"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="19dp"
            android:textColor="@color/black"
            android:text="Right" />

        <Button
            android:id="@+id/button8"
            android:layout_width="126dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/hijaumuda"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="Left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/circle_left" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:layout_weight="1"
            android:text="Select your motorcycle"
            android:textColor="@color/birudongker"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_circle" />
    </LinearLayout>

</LinearLayout>